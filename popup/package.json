{
  "name": "@web-extension/popup",
  "version": "0.0.0",
  "author": "dan-lovelace",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && yarn vite:tsx build --mode ${NODE_ENV:-production}",
    "cypress:open": "cypress open --e2e --browser chrome",
    "cypress:run": "cypress run",
    "dev": "yarn vite:tsx --host --mode ${VITE_MODE:-development}",
    "start": ": ${NODE_ENV:=development} && yarn build --watch",
    "test": "if [ \"$CI\" != \"true\" ]; then yarn run cypress:run; fi",
    "vite:tsx": "NODE_OPTIONS='--import tsx' vite"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.2",
    "@floating-ui/react-dom": "^2.1.2",
    "@popperjs/core": "^2.11.8",
    "@tanstack/react-query": "^5.62.11",
    "@web-extension/shared": "*",
    "bootstrap": "5.3.8",
    "material-icons": "^1.13.12",
    "papaparse": "^5.5.2",
    "preact": "^10.25.4",
    "preact-iso": "^2.8.1",
    "preact-render-to-string": "^6.5.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.3",
    "@types/bootstrap": "^5.2.10",
    "@vitejs/plugin-react": "^4.7.0",
    "@web-extension/testing": "*",
    "@wordreplacermax/types": "*",
    "sass": "^1.70.0"
  }
}
