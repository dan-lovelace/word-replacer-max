{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@worm/background": ["packages/background"],
      "@worm/content": ["packages/content"],
      "@worm/popup": ["packages/popup"],
      "@worm/shared": ["packages/shared"],
      "@worm/testing": ["packages/testing"],
      "@worm/types": ["packages/types"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  }
}
